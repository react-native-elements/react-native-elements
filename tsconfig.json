{
  "Display": "React Native Elements",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@react-native-elements/base": ["./packages/base/src"],
      "@react-native-elements/theme": ["./packages/theme/src"],
      "@react-native-elements/*": ["./packages/*/src"]
    },
    "outDir": "dist",
    "composite": true,
    "declaration": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-native",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitUseStrict": false,
    "noStrictGenericChecks": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "esnext",
    "allowJs": true
  },
  "include": ["packages/*/src/**/*.ts", "packages/*/src/**/*.tsx"],
  "exclude": [
    "node_modules",
    "website",
    "example",
    "packages/*/.ci",
    "packages/*/src/**/__tests__"
  ]
}
